{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "allowJs": true,
    // "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "target": "es2017",
    "outDir": "assets/js/dist",
    "baseUrl": "./assets/js/src",
  },
  "compileOnSave": true,
  "include": [
    "assets/js/src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}